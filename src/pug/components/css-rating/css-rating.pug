
mixin cssRating()
    .rating.large.star-icon.direction-rtl.value-1.half.color-default.label-top
        .label-value 1.5
        .star-container
            each i in [1,2,3]
                .star
                    i.star-empty
                    i.star-half
                    i.star-filled
            

